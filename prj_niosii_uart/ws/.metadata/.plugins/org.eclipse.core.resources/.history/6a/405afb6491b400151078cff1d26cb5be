#define  MAIN_LOCAL

#include "Main.h"



void Main_Init( void );


void Uart1_ISR(char Ch)
{
	Lb_printf("Received : %c\n", Ch);
}



int main(void)
{
	vu32 Delay;
	u32 i;
	u8  Buf[1024];

	Main_Init();


	while (1)
	{
		//Hw_Led_Toggle(0);

		//Lb_printf("Tick\n");

		Hw_SPI_Write8Bit( HW_SPI_CH1, 0x55 );
		//Hw_SPI_Write( HW_SPI_CH1, Buf, 1, 100 );
		for (Delay = 0; Delay < 0x1000000; Delay++);
	}

	return 0;
}





/*---------------------------------------------------------------------------
     TITLE   : Main_Init
     WORK    :
     ARG     : void
     RET     : void
---------------------------------------------------------------------------*/
void Main_Init( void )
{
	Hw_Init();
	Ap_Init();


	Hw_Uart_SetReceiveFuncISR( 0, Uart1_ISR );
}

